---

apiVersion: v1
kind: ServiceAccount
metadata:
 name: kergiva-admin
 namespace: kergiva2

---

apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: kergiva-admin
  namespace: kergiva2
rules:
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["list"]
- apiGroups: ["*"]
  resources: ["*"]
  verbs: ["*"]

---

apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: kergiva-admin
  namespace: kergiva2
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: kergiva-admin
subjects:
- namespace: kergiva2
  kind: ServiceAccount
  name: kergiva-admin
